public class TipoDatos {

    public static void main(String[] args) {

        // Este programa imprime los distintos tipos de datos de Java

        byte numero1 = 1;
        int numero2 = 10;
        short numero3 = 215;
        long numero4 = 1500;

        // tipo de datos de coma flotante
        float numero5 = 4.5f;
        double numero6 = 10.2d;

        // tipo de datos alfanumericos
        char caracter = 'a';
        String cadenaTexto = "Esto es una cadena de texto";

        // tipo booleano
        boolean soyGuai = true;

        //impresion de tipos por consola
        System.out.println("Esto es un dato tipo byte " + numero1);
        System.out.println("Esto es un dato tipo int " + numero2);
        System.out.println("Esto es un dato tipo short " + numero3);
        System.out.println("Esto es un dato tipo long " + numero4);
        System.out.println("Esto es un dato tipo float " + numero5);
        System.out.println("Esto es un dato tipo double " + numero6);
        System.out.println("Esto es un dato tipo char " + caracter);
        System.out.println("Esto es un dato tipo String " + cadenaTexto);
        System.out.println("Esto es un dato tipo booleano " + soyGuai);

    }
}
