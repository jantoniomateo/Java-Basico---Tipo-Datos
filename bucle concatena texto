public class Ejercicio3 {

    public static void main(String[] args) {

        // Ejercicio de bucle para concatenar texto

        String[] nombres = new String[] {"Manuel", "Fernando", "Alfonso", "Juan"};
        String[] apellidos = new String[]{"López", "Alonso", "Romero","Hernández"};

        //Creamos un bucle para recorrer los arrays

        for (int i=0; i<nombres.length; i++){
            System.out.println("El nombre es "+nombres[i] + " y su apellido "+apellidos[i]);
        }
    }
}
